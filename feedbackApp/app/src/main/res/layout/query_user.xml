<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        >

        <TextView
            android:text="@string/whichActivity"
            android:fontFamily="sans-serif-thin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="70sp"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorTertiary" />

        <TextView
            android:text="@string/whichDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:id="@+id/titleDescr" />

        <TextView
            android:text="@string/feedbackReceived"
            android:fontFamily="sans-serif-thin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedbackReceived"
            android:textSize="70sp"
            android:textAlignment="center"
            android:layout_marginTop="200dp"
            android:textColor="?android:attr/textColorTertiary"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:splitMotionEvents="false">



            <Button
                android:id="@+id/first_activity"

                android:text="Button"
                android:textColor="?android:attr/textColorTertiary"
                android:textSize="25sp"
style="@style/CustomButton"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:background="@drawable/buttonshape"
                android:layout_marginRight="50dp"
                />

            <Button
                android:id="@+id/second_activity"

                android:text="Button"
                android:textSize="25sp"
                style="@style/CustomButton"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:background="@drawable/buttonshape"
                android:layout_marginRight="50dp"
                android:textColor="?android:attr/textColorTertiary" />

            <Button
                android:id="@+id/third_activity"

                android:text="Button"
                android:textSize="25sp"
                style="@style/CustomButton"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:background="@drawable/buttonshape"

                android:textColor="?android:attr/textColorTertiary" />

        </LinearLayout>

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="880dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:background="@drawable/button_altro"
            style="@style/CustomButton"
            android:layout_marginTop="30dp"
            android:text="Altro"
            android:textColor="?android:attr/textColorTertiary"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/other" />

    </LinearLayout>

</LinearLayout>